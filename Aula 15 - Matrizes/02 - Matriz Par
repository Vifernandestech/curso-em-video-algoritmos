Algoritmo "Matriz Par"

Var
   Valores: vetor[1..3, 1..3] de Inteiro
   L,C: Inteiro
   TotalPares: Inteiro

Inicio
   Para L <- 1 até 3 faça
        Para C <- 1 até 3 faça
             Escreva("Digite o valor da posição [", L,",", C,"]")
             Leia (Valores[L, C])
        FimPara
   FimPara
   
   Escreval()
   Escreval("MATRIZ 3X3: ")
   TotalPares <- 0
   
   Para L <- 1 até 3 faça
        Para C <- 1 até 3 faça
             Se (Valores[L, C] % 2 = 0) então
                Escreva("[",Valores[L,C]:5,"]")
                TotalPares <- TotalPares + 1
             Senão
                  Escreva(Valores[L,C]:5)
             FimSe
        FimPara
        Escreval()
   FimPara
   
   Escreval()
   Escreva("Ao todo foram identificados", TotalPares, "números pares dentro da matriz.")
   


Fimalgoritmo
