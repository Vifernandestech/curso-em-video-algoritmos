Algoritmo "Conte Até Valor 2"

Var
   Contador, Valor, Salto: Inteiro


Inicio
      Contador <- 0
      Escreva("Quer contar até quanto?: ")
      Leia(Valor)
      Escreva("Qual será o valor do salto(valor a somar)?: ")
      Leia(Salto)
      Enquanto (Contador <= Valor) faça
               Escreval(Contador)
               Contador <- Contador + Salto
      FimEnquanto
      Escreval("Finalizei a contagem!")



Fimalgoritmo
